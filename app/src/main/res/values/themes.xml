<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Cocktail" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/accent</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="colorControlNormal">@color/white</item>
    </style>

    <style name="CustomToolbarTheme" parent="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:itemBackground">@color/options_menu_background</item>
    </style>



    <style name="Theme.Cocktail" parent="Base.Theme.Cocktail" />


    <style name="Custom" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:itemBackground">@color/options_menu_background</item>
        <item name="android:textColor">@color/options_menu_text</item>
        <item name="actionOverflowButtonStyle">@style/OverflowButtonStyle</item>

    </style>
    <style name="OverflowButtonStyle" parent="Widget.AppCompat.ActionButton.Overflow">
    <item name="android:tint">@color/white</item>
</style>

</resources>
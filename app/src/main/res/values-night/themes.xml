<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Cocktail" parent="Theme.MaterialComponents.DayNight.NoActionBar.Bridge">
        <item name="colorPrimary">@color/primary_dark</item>
        <item name="colorPrimaryVariant">@color/violet_dark</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="colorControlNormal">@color/white</item>
    </style>

    <style name="CustomToolbarTheme" parent="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:textColor">@color/text_color</item>

    </style>

    <style name="MyTextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">
        <item name="boxStrokeColor">@color/popup_text_color</item>
        <item name="endIconTint">@color/popup_text_color</item>
        <item name="hintTextColor"> @color/popup_text_color</item>
    </style>

    <style name="MyDropDownListBackground" parent="Widget.AppCompat.AutoCompleteTextView">
        <item name="android:popupBackground">@color/options_menu_background</item>
    </style>

    <style name="MyAutoCompleteTextView" parent="Widget.AppCompat.AutoCompleteTextView">
        <item name="android:popupBackground">@color/options_menu_background</item>
        <item name="hintTextColor">@color/popup_text_color</item>
    </style>



    <style name="Theme.Cocktail" parent="Base.Theme.Cocktail" />
</resources>